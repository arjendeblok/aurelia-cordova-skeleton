{
    "compileOnSave": true,
    "compilerOptions": {
      "moduleResolution": "node",
      "noImplicitAny": false,
      "noImplicitUseStrict": false,
      "noEmitOnError": true,
      "removeComments": false,
      "sourceMap": true,
      "outDir": "",
      "module": "amd",
      "target": "es5",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "declaration": false,
      "noEmitHelpers": false,
      "noLib": false,
      "lib": [
        "es6",
        "dom"
      ]
    },
    "exclude": ["platforms", "node_modules", "bower_components", "plugins", "merges", "res", "bin", "bld"]
  }
  